{
  "name": "moonbit-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MoonBit Server - Node.js API для анализа криптовалют с лунными фазами",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm --experimental-specifier-resolution=node src/index.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit --config=jest.config.ts",
    "test:watch": "NODE_ENV=test jest --watch --detectOpenHandles --config=jest.config.ts",
    "test:coverage": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit --config=jest.config.ts",
    "lint": "eslint src/ __tests__/ --ext .ts,.js",
    "lint:fix": "eslint src/ __tests__/ --ext .ts,.js --fix"
  },
  "keywords": ["moonbit", "bitcoin", "cryptocurrency", "lunar-phases", "astrology", "api", "server"],
  "dependencies": {
    "astronomia": "^4.1.1",
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "inversify": "^6.0.1",
    "ioredis": "^5.6.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.43.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
